#!/bin/bash

source /nobackup/h_cqs/softwares/cqsperl/scripts/binds.sh

rimg=/data/cqs/softwares/singularity/cqs_bioconductor.3_19_R_4_4_0.20240510.sif

rver=$(singularity exec -e -B $mybinds $rimg R --version | grep "R version" | cut -d ' ' -f3)

rlib=/nobackup/h_cqs/rlibs_$rver/$USER

mkdir -p $rlib

singularity exec -e -B $mybinds --pwd `pwd` \
  --env R_LIBS="$rlib" \
  --env LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/lib/jvm/java-11-openjdk-amd64/lib/server \
  --env TZ="America/Chicago" \
  $rimg \
  Rscript $@
